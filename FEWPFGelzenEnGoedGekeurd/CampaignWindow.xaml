<Window x:Class="FEWPFGelzenEnGoedGekeurd.CampaignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEWPFGelzenEnGoedGekeurd"
        mc:Ignorable="d"
        Title="CampaignWindow" Height="450" Width="800">
    <Grid>
        <ToolBar Margin="0,0,0,380" RenderTransformOrigin="0.005,0.121">
            <Button Content="Customer" Click="NavigateToCustomer"/>
            <Button Content="Product" Click="NavigateToProduct"/>
            <Button Content="Campaign" Click="NavigateToCampaign"/>
            <Button Content="Planning" Click="NavigateToPlanning"/>
        </ToolBar>
        <TextBox HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" Text="name" VerticalAlignment="Top" Width="232" Name="AddCampaignName"/>
        <Button Content="Add Campaign" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Click="Button_Click" Name="AddCampaignButton"/>
        <DataGrid Name="CampaignDatagrid" Margin="347,113,27,48"></DataGrid>
        <ListBox Name="KindOfCampaignsListBox" Margin="10,107,558,246" SelectionChanged="KindOfCampaignsListBox_SelectionChanged"/>
    </Grid>
</Window>
